<Window x:Class="TimeView.wpf.ScheduleListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeView.wpf"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="Schedule" 
        Height="800" 
        Width="770"
        DataContext="{Binding Source={StaticResource mainViewModelLocator},  Path=ScheduleListViewModel}">
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <ListView Name="ScheduleList"
                  ItemsSource="{Binding Schedules}"
                  SelectedItem="{Binding SelectedSchedule}"
                  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="5 5 5 5" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Rectangle Grid.Column="0" Grid.Row="0" Fill="{Binding CategoryEntry.Name}" Margin="2 2 2 2"></Rectangle>
                            <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="14" FontWeight="Bold" Text="{Binding Day, StringFormat=dddd}"></TextBlock>
                            <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" FontSize="14" FontWeight="Bold" Text="{Binding Day, StringFormat=dd-MM-yyyy}"></TextBlock>
                            <TextBlock Grid.Column="3" Grid.Row="0" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold" Text="{Binding CategoryEntry, Converter={StaticResource categoryEntryHourConverter}}" ></TextBlock>

                            <TextBlock Grid.Column="0" Grid.Row="1" FontSize="12" Text="{Binding CategoryEntry.Name}"></TextBlock>
                        </Grid>
                        

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>

        <TextBlock Margin="10" FontSize="20" Grid.Column="0" Grid.Row="1"  Text="Day:"></TextBlock>
        <DatePicker Margin="5"  Width="200" Text="{Binding SelectedSchedule.Day, Mode=TwoWay}"  Height="30" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"></DatePicker>


        <TextBlock Margin="10" FontSize="20" Grid.Column="0" Grid.Row="2"  Text="Hour:"></TextBlock>

        <ComboBox HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2"  Width="200" Height="30" Margin="5"
                  ItemsSource="{Binding CategoryEntries, Mode=OneWay}"
                  SelectedValue="{Binding SelectedSchedule.CategoryEntryId , Mode=OneWay}"
                  SelectedValuePath="Id"
                  >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding Name}" Width="16" Height="16" Margin="0,2,5,2" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Name="MessageTextBlock" FontWeight="Bold" HorizontalAlignment="Right" Foreground="red" Margin="5 2 2 5" Cursor="Hand"  Grid.Column="1" Grid.Row="4"></TextBlock>



        <Button Command="{Binding NewCommand}"  Grid.Row ="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Width="200" Height="30" Margin="5" Content="New entry"></Button>
        <Button Command="{Binding SaveCommand}" Grid.Row ="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="200" Height="30" Margin="5" Content="Save"></Button>

    </Grid>
</Window>
