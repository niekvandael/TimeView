<Window x:Class="TimeView.wpf.Timesheet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeView.wpf"
        mc:Ignorable="d"
        Title="Timesheet" Height="300" Width="300">

    <Grid>
       <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ListView x:Name="listView"  Margin="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="137" VerticalAlignment="Top" Width="272" />

        <TextBlock  Grid.Column="0" Grid.Row="1" Text="Day:" ></TextBlock>
        <DatePicker Grid.Column="1" Grid.Row="1"></DatePicker>

        <TextBlock  Grid.Column="0" Grid.Row="2" Text="Category:" ></TextBlock>
        <ComboBox Grid.Column="1" Grid.Row="2"></ComboBox>
        <Button Content="Save" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
